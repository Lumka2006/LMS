<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.lms.controller.MainController"
      spacing="10" padding="10">

    <MenuBar>
        <Menu text="File">
            <MenuItem text="Exit" onAction="#handleExit"/>
        </Menu>
        <Menu text="Help">
            <MenuItem text="About" onAction="#handleAbout"/>
        </Menu>
    </MenuBar>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Course Progress:"/>
        <ProgressBar fx:id="courseProgress" progress="0.0" prefWidth="200"/>
        <ProgressIndicator fx:id="progressIndicator" progress="0.0"/>
    </HBox>

    <ScrollPane fitToWidth="true" prefHeight="400">
        <VBox fx:id="contentBox" spacing="5">
            <!-- Content will be added dynamically -->
        </VBox>
    </ScrollPane>

    <Pagination fx:id="pagination" VBox.vgrow="ALWAYS"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Animated Button" fx:id="animatedButton" onAction="#handleAnimatedButton">
            <effect>
                <DropShadow radius="5.0" spread="0.2"/>
            </effect>
        </Button>
    </HBox>

</VBox> 