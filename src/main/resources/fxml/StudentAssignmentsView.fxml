<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.lms.controller.StudentAssignmentsController"
      spacing="10" padding="20">
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="My Assignments" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Refresh" onAction="#refreshAssignments"/>
    </HBox>
    
    <TableView fx:id="assignmentsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="courseColumn" text="Course" prefWidth="150"/>
            <TableColumn fx:id="titleColumn" text="Assignment" prefWidth="200"/>
            <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="150"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
            <TableColumn fx:id="gradeColumn" text="Grade" prefWidth="100"/>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150"/>
        </columns>
    </TableView>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Back to Dashboard" onAction="#backToDashboard"/>
    </HBox>
</VBox> 